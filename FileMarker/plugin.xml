<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <!--markerー-->
   <extension
         id="FileMarker"
         name="ファイルマーカー"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <!--edhitor-->
   <extension
         id="FiileMarker.Editor"
         point="org.eclipse.ui.editors">
   </extension>
   <!--command-->
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="FileMarker.command.category"
            name="カテゴリー">
      </category>
      <command
            categoryId="FileMarker.command.category"
            id="FileMarker.commands.createCommand"
            name="クリエイトコマンド">
      </command>
      <command
            categoryId="FileMarker.command.category"
            id="FileMarker.commands.deleteCommand"
            name="デリート">
      </command>
   </extension>
   <!--handler-->
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="handlers.CreateHandler"
            commandId="FileMarker.commands.createCommand">
      </handler>
      <handler
            class="handlers.DeleteHandler"
            commandId="FileMarker.commands.deleteCommand">
      </handler>
   </extension>
   <!--menu-->
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar?after=additions">
         <toolbar
               id="FileMarker.toolbars.create"
               label="クリエイト">
            <command
                  commandId="FileMarker.commands.createCommand"
                  icon="icon/けいおんjava.png"
                  id="FileMarker.toolbars.createToolbar"
                  style="push"
                  tooltip="マーカー生成">
            </command>
         </toolbar>
         <toolbar
               id="FileMarker.toobars.delete"
               label="デリート">
            <command
                  commandId="FileMarker.commands.deleteCommand"
                  icon="icon/群馬.png"
                  id="FileMarker.toolbars.deretetoolbar"
                  label="デリートマーカー"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <!--AnnotationType-->
   <extension
         point="org.eclipse.ui.editors.annotationTypes">
      <type
            markerSeverity="0"
            markerType="FileMarker"
            name="FileMarker.annotation"
            super="org.eclipse.ui.workbench.texteditor.info">
      </type>
   </extension>
   <!--AnnotationSpecification-->
   <extension
         point="org.eclipse.ui.editors.markerAnnotationSpecification">
      <specification
            annotationType="FileMarker.annotation"
            colorPreferenceKey="clcolor"
            colorPreferenceValue="255,0,0"
            icon="icon/群馬.gif"
            includeOnPreferencePage="true"
            label="マーカーのハイライト"
            overviewRulerPreferenceKey="clruler"
            textPreferenceValue="true"
            textStylePreferenceValue="BOX"
            verticalRulerPreferenceKey="clvertical">
      </specification>
   </extension>
   
</plugin>
