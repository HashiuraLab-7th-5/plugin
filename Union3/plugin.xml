<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
   </extension>
   <extension
         id="id1"
         point="org.eclipse.core.resources.markers">
      <persistent
            value="true">
      </persistent>
      <super
            type="org.eclipse.core.resources.problemmarker">
      </super>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="Union3.commands.category"
            name="コマンドカテゴリー">
      </category>
      <command
            categoryId="Union3.commands.category"
            id="Union3.command.detect"
            name="違反検出コマンド">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <category
            id="Union3.views.category"
            name="ビュー用のカテゴリー3">
      </category>
      <view
            category="Union3.views.category"
            class="views.View"
            icon="icon/プログラムアイコン.png"
            id="Union3.ErrorView"
            name="エラー表示用ビュー3"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.handlers">
      <handler
            class="handler.Detect"
            commandId="Union3.command.category">
      </handler>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:Union3.ErrorView?after=additions">
         <command
               commandId="Union3.command.category"
               icon="icon/プログラムアイコン.png"
               id="Union3.menus.command"
               label="結合用ツールバー"
               style="push">
         </command>
         <toolbar
               id="Union3.toolbar1">
         </toolbar>
      </menuContribution>
   </extension>

</plugin>
